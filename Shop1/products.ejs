<html>
  <head>
    <title>Produkte</title>
    <meta http-equiv="content-type" content="text/html; charset=utf-8">
    <script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"> </script>
    <script type="text/javascript">

      function suche(){
        
        var product = new Object();
        product.produkt=$("#produkt").val();;
        alert(product.produkt);
        $.ajax({
            host: "localhost",
            port: 3001,
            url: '/admin/produktsuche/suche/'+product.produkt,
            type: 'get',
            success: function(data){
              if(data==201) alert("Produkt existiert nicht!");
              else {
                alert("Produkt gefunden!");
              }
            }
        });
      };


    </script>
  </head>
  <body>
    <a href="<%- id%>/basket">Warenkorb</a><br><br>
    <form id="form">
      <input type="text" id="produkt" size="40" placeholder="Produkt" required><br>
      <input type="submit" id="sub" value="Suchen" onClick="suche();"><br><br>
    </form><br>
    <h1>Produkte</h1>
    <ul>
      <% for(var i = 0; i<products.length;i++){
          %>
          <form action="<%- id%>/basket/<%-products[i]._id%>" method="GET" target="hiddenFrame">
          <h2>Artikel <%= i+1 %> </h2>
          <li><%= products[i].produkt %></li>
          <li><%= products[i].herkunft %></li>
          <li><%= products[i].hersteller %></li>
          <li><%= products[i].preis %></li>
          <li><input type="submit" value="zum Warenkorb hinzufÃ¼gen"></li>
          </form>
          <%
          }
          %>
    </ul>
  <iframe name="hiddenFrame" width="0" height="0" border="0" style="display: none;"></iframe>
  </body>
</html>
