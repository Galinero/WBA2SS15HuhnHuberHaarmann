<html>
  <head>
    <title>Produkte</title>
    <meta http-equiv="content-type" content="text/html; charset=utf-8">
    <script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"> </script>
    <script type="text/javascript">

      function feuer(var x){
        alert(x);
        $.ajax({
            host: "localhost",
            port: 3001,
            url: './basket/'+x,
            dataType: 'json',
            type: 'GET',
            success: function(data){
              if(data==201) alert("Produkt existiert nicht!");
              else if(data==200) alert("Zum Warenkorb hinzugefügt");
            }
        });
      };



    </script>
  </head>
  <body>
    <a href="<%- id%>/basket">Warenkorb</a><br><br>
    <h1>Produkte</h1>
    <ul>
      <% for(var i = 0; i<products.length;i++){
          %>
          <form action="<%- id%>/basket/<%-products[i]._id%>" method="GET" target="hiddenFrame">
          <h2>Artikel <%= i+1 %> </h2>
          <li><%= products[i].produkt %></li>
          <li><%= products[i].herkunft %></li>
          <li><%= products[i].hersteller %></li>
          <li><%= products[i].preis %></li>
          <li><input type="submit" value="zum Warenkorb hinzufügen"></li>
          </form>
          <%
          }
          %>
    </ul>
  <iframe name="hiddenFrame" width="0" height="0" border="0" style="display: none;"></iframe>
  </body>
</html>
